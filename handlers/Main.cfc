// This is our ColdBox handler (Controller)component {	// This line will cause WireBox to create the GreeterService and inject a reference in this CFC	property name="GreeterService" inject="GreeterService";		// This is asking WireBox to inject a refernce to itself so we can create ad-hoc "Persons"	property name="WireBox" inject="wirebox";	// Default Action	function index(event, rc, prc) {				// Accept name from FORM/URL or default to "Stranger"		var thisName = event.getValue("name","Stranger");				// Ask WireBox to create a new person for us.  getModel("Person") would do the same thing		var thisPerson = WireBox.getInstance("Person").setName(thisName);				// Create the welcome message for our site visitor place in the private request collection		prc.welcomeMessage = GreeterService.greet(thisPerson); 				// The view "/views/Main/index.cfm" will be run by convention  	}}